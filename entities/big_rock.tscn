script/source = "extends StaticBody2D\n\nonready var g = get_node(\"/root/global\")\n\nfunc _ready():\n\tvar k = g.get_key(\"rock_state\")\n\t\n\tif(g.get_world_node().next_scene_name == \"past\"):\n\t\tif(k and k == \"metal_door\"):\n\t\t\tget_node(\"sprite\").set_frame(1)\n\t\telif(k and k == \"chainsaw\"):\n\t\t\tget_node(\"sprite\").set_frame(2)\n\t\telse:\n\t\t\tget_node(\"sprite\").set_frame(0)\n\telse:\n\t\tif(k and k == \"metal_door\"):\n\t\t\tget_node(\"sprite\").set_frame(4)\n\t\telif(k and k == \"chainsaw\"):\n\t\t\tg.remove_key(\"rock_state\")\n\t\t\tvar ch = load(\"res://entities/chainsaw_handle.tscn\").instance()\n\t\t\tch.set_pos(get_node(\"handle_spawn\").get_global_pos())\n\t\t\tg.get_world_node().get_node(\"scene/\" + g.get_world_node().next_scene_name + \"/entities\").call_deferred(\"add_child\", ch)\n\t\telse:\n\t\t\tget_node(\"sprite\").set_frame(3)\n\nfunc on_player_interaction(item):\n\tif(g.get_world_node().next_scene_name == \"past\"):\n\t\tif(!g.has_key(\"rock_state\")):\n\t\t\tif(item and item == g.items.chainsaw):\n\t\t\t\tg.add_key(\"rock_state\", \"chainsaw\")\n\t\t\t\tg.inventory_remove(\"chainsaw\")\n\t\t\t\treturn true\n\t\t\telif(item and item == g.items.metal_door):\n\t\t\t\tg.add_key(\"rock_state\", \"metal_door\")\n\t\t\t\tg.inventory_remove(\"metal_door\")\n\t\t\t\treturn true\n\t\t\telse:\n\t\t\t\treturn false\n\t\telse:\n\t\t\tg.show_text(\"I shouldn\'t interfere with that right now\")\n\t\t\treturn true\n\telse:\n\t\tif(g.has_key(\"rock_state\") and g.get_key(\"rock_state\") == \"metal_door\"):\n\t\t\tif(item and item == g.items.shovel):\n\t\t\t\tg.show_text(\"That would be too easy\")\n\t\t\t\treturn true\n\t\t\telif(item and item == g.items.gummy_worms):\n\t\t\t\tg.show_text(\"Wow! A mole comes and eats the worms! ... He dug out the metal. Awesome!\")\n\t\t\t\tg.remove_key(\"rock_state\")\n\t\t\t\tg.inventory_add(g.items.dull_blade)\n\t\t\t\tg.inventory_remove(\"gummy_worms\")\n\t\t\t\treturn true\n\t\t\telse:\n\t\t\t\tg.show_text(\"That thing is flat now. But I can\'t get it out...\")\n\t\t\t\treturn true\n\t\telse:\n\t\t\tg.show_text(\"This would make me flat if it hit me\")\n\t\t\treturn true\n\t\t\n"

